{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block title %}Se connecter{% endblock %}
{% block breadcrumb %}
    <li class="breadcrumb-item" aria-current="page"><a class="text-white nav-item" href="{{ path("login")}}">Se connecter</a></li>
{% endblock %}
{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey }}
        </div>
    {% endif %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
    <div class="col-sm-5">
        <div class="well">
            <form action="{{ path('login') }}" method="post">
                <fieldset>
                    <legend><i class="fa fa-lock" aria-hidden="true"></i> Connexion</legend>
                    <hr>
                    <div class="form-group">
                        <label for="username">Utilisateur</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" id="password" name="_password" class="form-control" />
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    <div class="form-check">
                        <input type="checkbox" name="_remember_me" id="checkremember" class="form-check-input">
                        <label class="form-check-label" for="checkremember">Se souvenir</label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-clair">
                            <i class="fa fa-sign-in" aria-hidden="true"></i> On entre
                        </button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>


{% endblock %}